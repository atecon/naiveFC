set verbose off

open "/home/at/git/simple_forecasts/beer.gdt" --quiet

scalar h = 11		# set forecast horizon

# MEANFC
xmean = meanf(x, h)
xmean
fcplot(x, xmean, "Mean Forecast", "nice ylabel", "nice xlabel")

# MEANFC + bootstrap
xmean = meanf(x, h, , ,999,$pd)
xmean
fcplot(x, xmean, "Mean Forecast + Boot.")

# SMEANF:
smean = smeanf(x, h)
smean
fcplot(x, smean, "Seasonal Mean Forecast")

# SNAIVE:
snaiv = snaive(x, h)
snaiv
fcplot(x, snaiv, "Naive Seasonal Forecast")

# RW wo drift
rw = rwf(x, h)
rw
fcplot(x, rw, "Random-Walk Forecast")

# RW with drift
rw = rwf(x, h, 1)
rw
fcplot(x, rw, "Random-Walk + Drift Forecast")


